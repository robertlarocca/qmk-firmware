# EditorConfig is awesome: https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML/CSS Style Guide:
# - https://google.github.io/styleguide/htmlcssguide.html
[*.{htm,html,css}]
indent_style = space
indent_size = 2

[INSTALL]
indent_style = tab
indent_size = 2

[*.{j2,jinja2}]
indent_style = tab
indent_size = 4

[*.{js,json}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# Python Style Guide:
# - https://google.github.io/styleguide/pyguide.html
[*.py]
indent_style = space
indent_size = 4

# Shell Style Guide:
# - https://google.github.io/styleguide/shellguide.html
[*.sh]
indent_style = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

## QMK Firmware ##

# QMK lib/** Directory
[lib/**]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
spelling_language = unset
tab_width = unset
trim_trailing_whitespace = unset

# QMK lib/python Files
[{*.py,lib/python/**.py}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 200
trim_trailing_whitespace = true
